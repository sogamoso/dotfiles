#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Install Homebrew if missing
if ! command -v brew >/dev/null 2>&1; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

  # Make brew available in THIS shell session
  eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# Ensure brew is available now
command -v brew >/dev/null 2>&1 || { echo "brew not found on PATH after install" >&2; exit 1; }

brew update
brew bundle --file "$SCRIPT_DIR/Brewfile"

# Stow dotfiles
if command -v stow >/dev/null 2>&1 && [[ -d "$SCRIPT_DIR/stow" ]]; then
  (
    cd "$SCRIPT_DIR/stow"
    stow --target "$HOME" --restow */
  )
fi
